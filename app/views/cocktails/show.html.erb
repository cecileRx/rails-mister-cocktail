
<div class="main-container pt-5">
  <div class="titles">
    <h2> Let's create your cocktail </h2>

  </div>
  <div class="show-style">
    <div class="receipe">
      <h1>Your receipe</h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description%>  <%= dose.ingredient.name%></li>
        <p><%= link_to "remove #{dose.ingredient.name}", dose_path(dose), method: :delete %></p>
        <% end %>
      </ul>
    </div>
    <div class="cocktail-make">
       <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
  <div class="cocktail-result">
    <p><%= link_to "Ready to see your creation?", cocktail_drink_path(@cocktail) %></p>
  </div>
</div>
