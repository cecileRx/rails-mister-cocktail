<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @doses.each do |dose|  %>
        <li> <%= dose.description%>  <%= dose.ingredient.name %></li>
        <p> <%= link_to 'remove a dose', dose_path(dose), method: :delete %></p>
        <% end %>
      </ul>
      <%= cl_image_tag("tpdvctp9g3jenj6lheqt",
      width: 400, height: 300, crop: :fill) %>

      <p> <%= link_to 'add an ingredient', new_cocktail_dose_path(@cocktail) %></p>
    </div>
  </div>
</div>
